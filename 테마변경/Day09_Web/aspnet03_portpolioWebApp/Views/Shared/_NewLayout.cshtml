<!DOCTYPE html>
<html class="no-js" lang="ko">

<head>
    <!-- HTML은 대소문자 구분없지만 대문자 사용자제-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/png" href="favicon.ico">
    @*<meta name="description" content="">
    <meta name="author" content="">*@

    <!--Google Font link-->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Raleway:400,600,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet">

    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700;800&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Nanum+Gothic:wght@400;700;800&display=swap" rel="stylesheet">

    <title>@ViewData["Title"] - "IoT 포토폴리오 웹앱"</title>
    <!-- Bootstrap 5 CDN-->
    <link rel="stylesheet" href="~/themes/seo_dream/assets/css/bootstrap.min.css " /> 
    
    

    <!-- Additional CSS Files -->
    @*assets/css/fontawesome.css*@
    <link rel="stylesheet" href="~/themes/seo_dream/assets/css/slick.css">
    <link rel="stylesheet" href="~/themes/seo_dream/assets/css/slick-theme.css">
    <link rel="stylesheet" href="~/themes/seo_dream/assets/css/animate.css">
    <link rel="stylesheet" href="~/themes/seo_dream/assets/css/fonticons.css">
    <link rel="stylesheet" href="~/themes/seo_dream/assets/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/themes/seo_dream/assets/css/bootstrap.css">
    <link rel="stylesheet" href="~/themes/seo_dream/assets/css/magnific-popup.css">
    <link rel="stylesheet" href="~/themes/seo_dream/assets/css/bootsnav.css">

    <!--Theme custom css -->
    <link rel="stylesheet" href="~/themes/seo_dream/assets/css/style.css">
    <!--Theme Responsive css-->
    <link rel="stylesheet" href="~/themes/seo_dream/assets/css/responsive.css" />
    <script src="~/themes/seo_dream/assets/js/vendor/modernizr-2.8.3-respond-1.4.2.min.js"></script>

    

    <!--우리사이트용 css추가-->
    <!--WYSIWYG 에디터 링크-->
    <link rel="stylesheet" href="~/lib/trumbowyg/ui/trumbowyg.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- Tost 메시지창 js 라이브러리 -->
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    </head>
 
<body data-spy="scroll" data-target=".navbar-collapse">



	<!-- Preloader -->
	<div id="loading">
		<div id="loading-center">	
			<div id="loading-center-absolute">
				<div class="object" id="object_one"></div>
				<div class="object" id="object_two"></div>
				<div class="object" id="object_three"></div>
				<div class="object" id="object_four"></div>
			</div>
		</div>
	</div>
	<!--End off Preloader -->


	<div class="culmn">
		<!--Home page style-->
		<nav class="navbar navbar-light navbar-expand-lg  navbar-fixed bootsnav">
			<!-- Start Top Search -->
			<div class="top-search">
				<div class="container">
					<div class="input-group">
						<span class="input-group-addon"><i class="fa fa-search"></i></span>
						<input type="text" class="form-control" placeholder="Search">
						<span class="input-group-addon close-search"><i class="fa fa-times"></i></span>
					</div>
				</div>
			</div>
			<!-- End Top Search -->

			<div class="container">
				<!-- Start Atribute Navigation -->
				<div class="attr-nav" style="margin-top:-30px" >
					<ul>
						@if (signInManager.IsSignedIn(User))
						{
							@if (User.IsInRole("Admin"))
							{
								<li class="scroll-to-screen">
									<a asp-controller="Admin" asp-action="ListRoles">권한관리</a>
								</li>
								<li class="scroll-to-section">
									<a asp-controller="Portfolio" asp-action="Index">포폴관리</a>
								</li>
							}
							<li class="scroll-to-section">
								<a asp-controller="Account" asp-action="Profile"
							   asp-route-userName="@userManager.GetUserName(User)">
							   <i class="fa fa-user-circle"></i>
								</a>
							</li>
							<li class="scroll-to-section" style="margin-top:25px">
								<form asp-controller="Account" asp-action="Logout" method="post">
									<button type="submit" class="btn btn-link">@userManager.GetUserName(User)</button>
								</form>
							</li>
						}
						else
						{
							<li class="scroll-to-section">
								<a asp-controller="Account" asp-action="Register">회원가입</a>
							</li>
							<li class="scroll-to-section">
								<a asp-controller="Account" asp-action="Login">로그인</a>
							</li>
						}
					</ul>
				</div>
				<!-- End Atribute Navigation -->
				<!-- Start Header Navigation -->
				<div class="navbar-header">
					<button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbar-menu">
						<span></span>
						<span></span>
						<span></span>
					</button>

					<a class="navbar-brand" href="#brand">

						<img src="assets/images/logo.png" class="logo logo-display m-top-10" alt="">
						<img src="assets/images/logo.jpg" class="logo logo-scrolled" alt="">

					</a>
				</div>
				<!-- End Header Navigation -->
				<!-- Collect the nav links, forms, and other content for toggling -->
				<div class="collapse navbar-collapse" id="navbar-menu">
					<ul class="nav navbar-nav navbar-right" data-in="fadeInDown" data-out="fadeOutUp">
						<li class="scroll-to-section"><a asp-controller="Home" asp-action="Index" class="active nanum-bold">홈</a></li>
						@if(ViewData["NoScroll"] != "true")
						{
						<li><a href="#hello">Hello</a></li>
						<li><a href="#about">소개</a></li>
						@*<li><a href="#service">Services</a></li>*@
						<li><a href="#portfolio">포트폴리오</a></li>
						@*<li><a href="#pricing">Pricing</a></li>*@
						@*<li><a href="#blog">Blog</a></li>*@
						<li><a href="#contact">문의하기</a></li>							
						}

						<li class="scroll-to-section"><a asp-action="Index" asp-controller="Board" class="nanum-bold">공지사항</a></li>

					</ul>
@*					<a class="menu-trigger">
						<span>Menu</span>
					</a>*@
				</div>
				<!-- /.navbar-collapse -->
			</div>

			<div>
				@RenderBody()
			</div>
			

		<footer id="footer" class="footer bg-black">
			<div class="container">
				<div class="row">
					<div class="main_footer text-center p-top-40 p-bottom-30">
						<p class="wow fadeInRight" data-wow-duration="1s">
							Made with PKNU by
								<a target="_blank" href="https://github.com/Yong-Hwan-Lee">Yong-Hwan-Lee</a> 2023. All Rights Reserved
						</p>
					</div>
				</div>
			</div>
		</footer>
	</div>
    <!-- Scripts -->
		<!-- JS includes -->
		<script src="~/themes/seo_dream/assets/js/vendor/jquery-1.11.2.min.js"></script>
		<script src="~/themes/seo_dream/assets/js/vendor/popper.min.js"></script>
		<script src="~/themes/seo_dream/assets/js/vendor/bootstrap.min.js"></script>

		<script src="~/themes/seo_dream/assets/js/jquery.magnific-popup.js"></script>
		<script src="~/themes/seo_dream/assets/js/jquery.easing.1.3.js"></script>
		<script src="~/themes/seo_dream/assets/js/slick.min.js"></script>
		<script src="~/themes/seo_dream/assets/js/jquery.collapse.js"></script>
		<script src="~/themes/seo_dream/assets/js/bootsnav.js"></script>

		<!-- paradise slider js -->


		<script src="http://maps.google.com/maps/api/js?key=AIzaSyD_tAQD36pKp9v4at5AnpGbvBUsLCOSJx8"></script>
		<script src="~/themes/seo_dream/assets/js/gmaps.min.js"></script>

		<script>
			function showmap() {
				var mapOptions = {
					zoom: 8,
					scrollwheel: false,
					center: new google.maps.LatLng(-34.397, 150.644),
					mapTypeId: google.maps.MapTypeId.ROADMAP
				};
				var map = new google.maps.Map(document.getElementById('map_canvas'), mapOptions);
				$('.mapheight').css('height', '350');
				$('.maps_text h3').hide();
			}

		</script>

	<script src="~/themes/seo_dream/assets/js/plugins.js"></script>
	<script src="~/themes/seo_dream/assets/js/main.js"></script>


    <!--WYSIWYG 에디터& js 한국어언어팩-->
    <script src="~/lib/trumbowyg/trumbowyg.min.js"></script>
    <script src="~/lib/trumbowyg/langs/ko.min.js"></script>
    <!-- trumbowyg를 site.js에서 부르기때문에 상위에 trumbowyg에 관련된 js가 먼저 나와야함-->
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>
